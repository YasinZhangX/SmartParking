<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutEditor"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvID"
                android:id="@+id/textView1"/>

            <EditText
                android:id="@+id/etID"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:inputType="text" />

        </LinearLayout>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="deleteRecord"
            android:text="@string/button_deleteRecord" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="continueRecord"
            android:text="@string/button_continue" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="readd"
            android:text="@string/button_readd" />

    </LinearLayout>

    <EditText
        android:id="@+id/text"

        android:layout_width="fill_parent"
        android:layout_height="176dp"
        android:layout_weight="0.99"
        android:editable="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="startScan"
            android:text="@string/button_fresh" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="clearMapInfo"
            android:text="@string/button_clearInfo" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="clearTable"
            android:text="@string/button_clearTable" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="getmacaddr"
            android:text="@string/button_getmacaddr" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="71dp"
            android:onClick="addTestRecord"
            android:text="@string/button_addTestRecord" />

    </LinearLayout>

</LinearLayout>